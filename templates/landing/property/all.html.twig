{% block body %}
<section class="page-title-two bg-color-1 centred">
    <div class="pattern-layer">
        <div class="pattern-1" style="background-image: url(assets/images/shape/shape-9.png);"></div>
        <div class="pattern-2" style="background-image: url(assets/images/shape/shape-10.png);"></div>
    </div>
    <div class="auto-container">
        <div class="content-box clearfix">
            <h1>Tous les biens</h1>
            <ul class="bread-crumb clearfix">
                <li><a href="/">Accueil</a></li>
                <li>Liste des biens</li>
            </ul>
        </div>

    </div>
</section>
<section class="property-page-section property-list" style="padding: 10px 0;">
    <div class="mx-2">
        <div class="search-field">
            <div class="inner-box">
                <div class="top-search">
                    {{ form_start(form, {'action': path('app_search'), 'method': 'POST', 'attr': {'class': 'search-form'
                    }}) }}
                    <div class="row clearfix">
                        <div class="col-lg-3 col-md-12 col-sm-12 column">
                            <div class="form-group">
                                <label>Bien recherché</label>
                                <div class="field-input">
                                    {{ form_widget(form.q, {'attr': {'class': 'form-control form-control-lg' }}) }}
                                </div>
                            </div>
                        </div>
                        <!-- <input type="search" name="search-field" placeholder="Search by Property, Location or Landmark..." required=""> -->
                        <div class="col-lg-3 col-md-6 col-sm-12 column">
                            <div class="form-group">
                                <label>Localisation</label>
                                <div class="field-input">
                                    {{ form_widget(form.country, {'attr': {'class': 'form-control form-control-lg' }})
                                    }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12 column">
                            <div class="form-group">
                                <label>Type</label>
                                <div class="field-select">
                                    {{ form_widget(form.type, {'attr': {'class': 'form-select form-select-sm' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-12 col-sm-12 column">
                            <div class="form-group">
                                <label>Catégorie</label>
                                <div class="field-input">
                                    {{ form_widget(form.categories, {'attr': {'class': 'form-select form-select-sm' }})
                                    }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="search-btn">
                        <button type="submit" class="px-2"><i class="fas fa-search"></i>RECHERCHER</button>
                    </div>

                    <button class="nav-btn nav-toggler navSidebar-button clearfix search__toggler text-primary"
                        type="button">Recherche avancée<i class="fas fa-angle-down"></i>
                    </button>

                </div>
                <div class="switch_btn_one">
                    <div class="advanced-search">
                        <div class="close-btn">
                            <a href="#" class="close-side-widget"><i class="far fa-times"></i></a>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-3 col-md-12 col-sm-12 column">
                                <div class="form-group">
                                    <label>Prix Min</label>
                                    <div class="field-input">
                                        {{ form_widget(form.pricemin, {'attr': {'class': 'form-control form-control-lg'
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-12 col-sm-12 column">
                                <div class="form-group">
                                    <label>Prix Max</label>
                                    <div class="field-input">
                                        {{ form_widget(form.pricemax, {'attr': {'class': 'form-control form-control-lg'
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-12 col-sm-12 column">
                                <div class="form-group">
                                    <label>Surface Min</label>
                                    <div class="field-input">
                                        {{ form_widget(form.surfacemin, {'attr': {'class': 'form-control
                                        form-control-lg' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-12 col-sm-12 column">
                                <div class="form-group">
                                    <label>Surface Max</label>
                                    <div class="field-input">
                                        {{ form_widget(form.surfacemax, {'attr': {'class': 'form-control
                                        form-control-lg' }}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
