        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 content-side">
                <div class="property-content-side">
                    <div class="item-shorting clearfix">
                        <div class="left-column pull-left">
                            <h5> Nombre de resulats : <span>{{ properties | length }}</span></h5>
                        </div>
                    </div>
                    <div class="wrapper list">
                        <div class="deals-list-content list-item">
                            <div class="row">
                                {% for item in properties %}
                                <div class="col-lg-3 col-md-6 col-sm-12 feature-block">
                                    <div class="feature-block-one wow fadeInUp animated" data-wow-delay="00ms"
                                        data-wow-duration="1500ms">
                                        <div class="inner-box">
                                            <div class="image-box">
                                                <figure class="image">
                                                    <img src="{{ asset('uploads/property_images/' ~ item.image) }}"
                                                        alt="">
                                                </figure>
                                                <span class="category">
                                                    <a class="text-white"
                                                        href="{{ path('app_category_items', {'name': item.getCategoryId().libelle}) }}">{{
                                                        item.getCategoryId().libelle }}</a>
                                                </span>
                                            </div>
                                            <div class="lower-content">
                                                <div class="author-info clearfix">
                                                    <div class="author pull-left">
                                                        <figure class="author-thumb">
                                                            <img src="{{ asset('front/images/feature/author-1.jpg') }}"
                                                                alt="">
                                                        </figure>
                                                        <h6>
                                                            {{ item.owner }}
                                                        </h6>
                                                    </div>
                                                    <div class="buy-btn pull-right">
                                                        <a href="/">
                                                            {{ item.type }}
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="title-text">
                                                    <h4>
                                                        <a href="/">
                                                            {{ item.title }}
                                                        </a>
                                                    </h4>
                                                </div>
                                                <div class="price-box clearfix">
                                                    <div class="price-info pull-left">
                                                        <h6>
                                                            Prix
                                                        </h6>
                                                        <h4>
                                                            {{ item.price | format_currency('EUR') }}
                                                        </h4>
                                                    </div>
                                                    <ul class="other-option pull-right clearfix">
                                                        <li>
                                                            {# {% set entryInfo = {
                                                            id: item.id,
                                                            type: item.type,
                                                            owner: item.owner,
                                                            image: asset('uploads/property_images/' ~ item.image),
                                                            category: item.getCategoryId().libelle,
                                                            title: item.title,
                                                            price: item.price,
                                                            country: item.country,
                                                            postalCode: item.postalCode,
                                                            surface: item.surface,
                                                            } %} #}

                                                            {# <a
                                                                href="{{ path('app_favourite_new', {'id': item.id }) }}">
                                                                <i class="icon-13"></i>
                                                            </a> #}
                                                            {# <a x-on:click="addTofav({{ entryInfo|json_encode }})">
                                                                <i class="icon-13"></i>
                                                            </a> #}
                                                        </li>
                                                    </ul>
                                                </div>
                                                {# <p>
                                                    {{ item. description }}
                                                </p> #}
                                                <ul class="more-details clearfix">
                                                    <li>
                                                        <i class="icon-10"></i>
                                                        {{ item.country }}
                                                    </li>
                                                    <li>
                                                        <i class="icon-12"></i>
                                                        {{ item.postalCode ? item.postalCode : '' }}
                                                    </li>
                                                    <li>
                                                        <i class="icon-16"></i>
                                                        {{ item.surface }}
                                                        m²

                                                    </li>
                                                </ul>
                                                <hr>
                                                <div class="other-info-box clearfix">
                                                    <div class="btn-box pull-left">
