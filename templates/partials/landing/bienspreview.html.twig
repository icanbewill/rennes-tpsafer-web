<section  x-data="handlerFav()" class="feature-section alternate-2 sec-pad">
    <div class="auto-container">
        <div class="sec-title centred">
            <h5>
                Biens




            </h5>
            <h2>
                Quelques biens




            </h2>
            <p>
                Retrouvez ci-dessous quelques biens, et amusez-vous.
            </p>
        </div>
        <div class="row clearfix">
            {% for item in properties %}
            <div class="col-lg-4 col-md-6 col-sm-12 feature-block">
                <div class="feature-block-one wow fadeInUp animated" data-wow-delay="00ms" data-wow-duration="1500ms">
                    <div class="inner-box">
                        <div class="image-box">
                            <figure class="image">
                                <img src="{{ asset('uploads/property_images/' ~ item.image) }}" alt="">
                            </figure>
                            <span class="category">
                                {{ item.getCategoryId().libelle }}
                            </span>
                        </div>
                        <div class="lower-content">
                            <div class="author-info clearfix">
                                <div class="author pull-left">
                                    <figure class="author-thumb">
                                        <img src="{{ asset('front/images/feature/author-1.jpg') }}" alt="">
                                    </figure>
                                    <h6>
                                        {{ item.owner }}
                                    </h6>
                                </div>
                                <div class="buy-btn pull-right">
                                    <a href="/">
                                        {{ item.type }}
                                    </a>
                                </div>
                            </div>
                            <div class="title-text">
                                <h4>
                                    <a href="/">
                                        {{ item.title }}
                                    </a>
                                </h4>
                            </div>
                            <div class="price-box clearfix">
                                <div class="price-info pull-left">
                                    <h6>
                                        Prix
                                    </h6>
                                    <h4>
                                        {{ item.price | format_currency('EUR') }}
                                    </h4>
                                </div>
                                <ul class="other-option pull-right clearfix">
                                    <li>
                                        {% set entryInfo = {
                                            id: item.id,
                                            type: item.type,
                                            owner: item.owner,
                                            image: asset('uploads/property_images/' ~ item.image),
                                            category: item.getCategoryId().libelle,
                                            title: item.title,
                                            price: item.price,
                                            country: item.country,
                                            postalCode: item.postalCode,
                                            surface: item.surface,
                                        } %}
                                        
                                        <a x-on:click="addTofav({{ entryInfo|json_encode }})">
                                            <i class="icon-13"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <p>
                                {{ item. description }}
                            </p>
                            <ul class="more-details clearfix">
                                <li>
                                    <i class="icon-10"></i>
                                    {{ item.country }}
                                </li>
                                <li>
                                    <i class="icon-12"></i>
                                    {{ item.postalCode ? item.postalCode : '' }}
                                </li>
                                <li>
                                    <i class="icon-16"></i>
                                    {{ item.surface }}
                                    mÂ²

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>


<script>
    function handlerFav() {
        return {
            addTofav(item) {
                let favourites = [];
                if (localStorage.getItem('favourites')) {
                    favourites = JSON.parse(localStorage.getItem('favourites'));
                }
                let found = favourites.find((_item) => _item.id === item.id);
                if(found){
                    toastr['warning']('Cet Ã©lement est dÃ©ja enregistrÃ© en favoris ðŸ›’', 'FAVORIS', {
                        closeButton: true,
                        tapToDismiss: true,
                        progressBar: true,
                        positionClass: "toast-bottom-left",
                    });

                }else{
                    favourites.push(item);
                    localStorage.setItem('favourites', JSON.stringify(favourites))
    
                    toastr['success']('Produit ajoutÃ© aux favoris ðŸ›’', 'FAVORIS', {
                        closeButton: true,
                        tapToDismiss: true,
                        progressBar: true,
                        positionClass: "toast-bottom-left",
                    });

                }
            },
        }
    }
</script>