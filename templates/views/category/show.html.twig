        <div class="d-flex">
            <a href="{{ path('app_category_index') }}" class="mx-2 btn btn-secondary mb-1">
                Retour                 
            </a>
            
            <a class="mr-2 btn btn-warning mb-1" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>

