{% extends 'layouts/dashboard.html.twig' %}

{% block title %}
    Favoris
    
{% endblock %}

{% block body %}
    <h3 class="mb-2">
        Liste des favoris
            
    </h3>
    <div class="card">
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>
                        #
                                            
                    </th>
                    <th>
                        Email
                                            
                    </th>
                    <th>
                        Bien associé
                                            
                    </th>
                    <th>
                        Date d'envoi
                                            
                    </th>
                    <th>
                        actions
                                            
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for favourite in favourites %}
                    <tr>
                        <td>
                            {{ loop.index }}
                        </td>
                        <td>
                            {{ favourite.email }}
                        </td>
                        <td>
                        <a class="text-uppercase" href="{{ path('app_property_show', {'id': favourite.getBienId().id}) }}">{{ favourite.getBienId().title }}</a>
                        </td>
                        <td>
                            {{ favourite.createdAt ? favourite.createdAt|date('d-m-m-Y à H:i:s') : '' }}
                        </td>
                        <td>
                            {{ include('views/favourite/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">
                            no records found                        
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
