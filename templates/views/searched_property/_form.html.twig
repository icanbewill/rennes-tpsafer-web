{{ form_start(form) }}
{# {{ form_widget(form) }} #}
<section class="contact-section bg-color-5">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 content-column">
                <div class="form-inner">
                    <div class="default-form">
                        <div class="row clearfix">
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.name, {'attr': {'class' : 'form-control','placeholder': 'Votre nom' }} ) }}
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.email, {'attr': {'class' : 'form-control','placeholder': 'Votre adresse mail' }} ) }}
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.type, {'attr': {'class' : 'form-control','placeholder': 'Type de bien' }} ) }}
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.country, {'attr': {'class' : 'form-control','placeholder': 'Localisation' }} ) }}
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.minprice, {'attr': {'class' : 'form-control','placeholder': 'Prix Min' }} ) }}
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.maxprice, {'attr': {'class' : 'form-control','placeholder': 'Prix Max' }} ) }}
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.minsurface, {'attr': {'class' : 'form-control','placeholder': 'Surface Min' }} ) }}
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                {{ form_widget(form.maxsurface, {'attr': {'class' : 'form-control','placeholder': 'Surface Max' }} ) }}
                            </div>
                        </div>
                        <button class="btn theme-btn btn-one">{{ button_label|default('Enregistrer') }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{ form_end(form) }}