{% extends 'layouts/dashboard.html.twig' %}

{% block title %}
    SearchedProperty index
{% endblock %}

{% block body %}
    <h3 class="mb-2">
        Bien recherchés
    </h3>
    <div class="card">
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Prix min
                    </th>
                    <th>
                        Prix max
                    </th>
                    <th>
                        Surface min
                    </th>
                    <th>
                        Surface max
                    </th>
                    <th>
                        Ville
                    </th>
                    <th>
                        Ajouté par
                    </th>
                    <th>
                        Date d'ajout
                    </th>
                    <th>
                        actions
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for searched_property in searched_properties %}
                    <tr>
                        <td>
                            {{ searched_property.id }}
                        </td>
                        <td>
                            {{ searched_property.type ? searched_property.type : '-' }}
                        </td>
                        <td>
                            {{ searched_property.minprice ? searched_property.minprice : 0 | format_currency('EUR') }}
                        </td>
                        <td>
                            {{ searched_property.maxprice ? searched_property.maxprice : 0 | format_currency('EUR') }}
                        </td>
                        <td>
                            {{ searched_property.minsurface ? searched_property.minsurface : 0 }} m²
                        </td>
                        <td>
                            {{ searched_property.maxsurface ? searched_property.maxsurface : 0 }} m²
                        </td>
                        <td>
                            {{ searched_property.country ? searched_property.country : '-'}}
                        </td>
                        <td>
                            {{ searched_property.name }} - {{ searched_property.email }}
                        </td>
                        <td>
                            {{ searched_property.createdAt ? searched_property.createdAt|date('d-m-Y') : '' }}
                        </td>
                        <td>
                            {# <a href="{{ path('app_searched_property_edit', {'id': searched_property.id}) }}">
                                edit
                            </a> #}
                            {{ include('views/searched_property/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
